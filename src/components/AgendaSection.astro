---
    //<h2 class="r-fit-text">BIG</h2>
const {header,p,h2,h3} = Astro.props;
let header1 = header ? `<h1>${header}</h1>` : null
let paragraph = p ? `<p>${p}</p>` : null
let header2 = h2 ? `<h2>${h2}</h2>` : null
let header3 = h3 ? `<h3>${h3}</h3>` : null
---
<section>
    <section>
        {header1}
        {header2}
        {header3}
        {paragraph}
    </section>
    <slot />
</section>

