---
import codeFetcher from "../../../js/codeFetcher";
import SlideLayout from "../../../layouts/SlideLayout.astro";
import Code from "../../../components/Code.astro";
import Explainer from "../../../components/Explainer.svelte";
import Timer from "../../../components/Timer.astro";
//"https://raw.githubusercontent.com/jonasholbech/foobarnodejs/master/server.js"
const snippets = await codeFetcher([
    {key:"app", url:"https://kea-alt-del.dk/courses/2021/spring/frontend/react/snippets/crazy_buttons/app.js"},
    {key:"server", url:"https://raw.githubusercontent.com/jonasholbech/foobarnodejs/master/server.js"}
])
